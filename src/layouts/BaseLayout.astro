// BaseLayout.astro
import ResponsiveNavMenu from "../components/ResponsiveNavMenu.astro";
---
---
import ResponsiveNavMenu from "../components/ResponsiveNavMenu.astro";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><slot name="title">MichalExp Remodeling</slot></title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet" />
    <style>
      html { font-family: 'Inter', sans-serif; }
      .font-playfair { font-family: 'Playfair Display', serif; }
    </style>
  </head>
  <body class="min-h-screen flex flex-col bg-neutral-50">
    <header class="w-full bg-white shadow">
      <nav class="container mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center gap-2 text-2xl font-bold font-playfair">
          <img src="/pictures/michalLogo.png" alt="MichalExp Logo" class="h-8 w-auto" />
          MichalExp
        </a>
        <ResponsiveNavMenu />
      </nav>
    </header>
    <main class="flex-1 container mx-auto px-4 py-8 w-full">
      <slot />
    </main>
    <footer class="w-full bg-gray-100 text-center py-4 text-gray-600 text-sm mt-8">
      &copy; {new Date().getFullYear()} MichalExp. All rights reserved.
    </footer>
  </body>
</html>
