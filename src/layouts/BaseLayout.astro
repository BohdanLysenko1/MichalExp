---
// BaseLayout.astro
import ResponsiveNavMenu from "../components/ResponsiveNavMenu.astro";
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><slot name="title">My Site</slot></title>
    <!-- Google Fonts: Playfair Display & Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet" />
    <style>
      html { font-family: 'Inter', sans-serif; }
      .font-playfair { font-family: 'Playfair Display', serif; }
    </style>
  </head>
  <body class="min-h-screen bg-white flex flex-col rounded-xl shadow-xl overflow-hidden">
    <header class="w-full bg-white rounded-t-xl shadow font-playfair">
      <nav class="container mx-auto px-4 py-4 flex items-center justify-between">
        <div class="text-2xl font-bold font-playfair">MyBrand</div>
        <div class="hidden md:block">
          <ResponsiveNavMenu />
        </div>
        <!-- Mobile menu placeholder, implement as needed -->
      </nav>
    </header>
    <main class="flex-1 container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="w-full bg-gray-100 text-center py-4 rounded-b-xl text-gray-600 text-sm">
      Â© {new Date().getFullYear()} MyBrand. All rights reserved.
    </footer>
  </body>
</html>
