---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactCTA from '../../components/ContactCTA.tsx';
import { ChefHat } from 'lucide-react';
---

<BaseLayout title="Luxury Kitchen Remodeling | Chicago's Premier Remodeling Studio">
  <!-- Hero Section -->
  <section class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden bg-gradient-to-br from-[color:var(--primary)] via-[color:var(--primary)]/90 to-[color:var(--accent)]/80">
    <div class="relative z-10 container-premium text-center">
      <div class="hero-content max-w-4xl mx-auto">
        <div class="inline-block text-[color:var(--accent)] mb-6">
          <ChefHat size={80} strokeWidth={1.5} />
        </div>
        <h1 class="text-display-xl font-display font-bold mb-6 text-[color:var(--primary)] leading-tight">
          Create the Heart of Your Home with 
          <span class="text-[color:var(--accent)]">Custom Kitchen Design</span>
        </h1>
        <p class="text-xl text-[color:var(--muted-foreground)] mb-8 max-w-2xl mx-auto leading-relaxed">
          Transform your kitchen into a culinary masterpiece with custom cabinetry, premium countertops, and innovative layouts designed for modern living.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <button class="btn-primary group" data-estimate-button>
            <span>Get Free Design Consultation</span>
            <svg class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </button>
          <a href="#portfolio" class="btn-secondary group">
            <span>View Kitchen Portfolio</span>
            <svg class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-y-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Overview -->
  <section class="py-20 bg-gradient-to-b from-white to-[color:var(--gray-50)]">
    <div class="container-premium">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          The Heart of Your Home Deserves Excellence
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] leading-relaxed mb-12">
          Your kitchen is where families gather, meals are shared, and memories are made. Our custom kitchen 
          renovations blend stunning aesthetics with intelligent functionality, creating spaces that inspire 
          culinary creativity while adding significant value to your home.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Custom Cabinetry</h3>
          <p class="text-[color:var(--muted-foreground)]">Handcrafted cabinets designed to maximize storage and showcase your personal style.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Premium Countertops</h3>
          <p class="text-[color:var(--muted-foreground)]">Quartz, granite, and marble surfaces that combine beauty with durability.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Smart Layouts</h3>
          <p class="text-[color:var(--muted-foreground)]">Optimized workflow designs that enhance efficiency and cooking enjoyment.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Professional Installation</h3>
          <p class="text-[color:var(--muted-foreground)]">Expert craftsmanship with attention to every detail and finish.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Premium Service Cards -->
  <section class="py-20 bg-white">
    <div class="container-premium">
      <div class="text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Complete Kitchen Solutions
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] max-w-3xl mx-auto">
          From full renovations to targeted upgrades, we offer comprehensive kitchen remodeling services tailored to your vision and budget.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Complete Renovations</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Full kitchen transformations with custom cabinetry, premium appliances, and luxury finishes.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Cabinet Refacing</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Transform existing cabinets with new doors, drawers, and premium hardware.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Countertop Installation</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Premium stone surfaces with precision templating and professional installation.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Kitchen Islands</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Custom islands that add workspace, storage, and gathering space for your family.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Lighting Design</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Under-cabinet, pendant, and recessed lighting for both function and ambiance.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3H5a2 2 0 00-2 2v12a4 4 0 004 4h2a2 2 0 002-2V5a2 2 0 00-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Appliance Integration</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Professional-grade appliances seamlessly integrated with custom cabinetry and design.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Timeline -->
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container-premium">
      <div class="text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Our Proven 5-Step Process
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] max-w-3xl mx-auto">
          We've perfected our renovation process over 15+ years to minimize disruption while maximizing results.
        </p>
      </div>
      
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-[color:var(--accent)] via-[color:var(--primary)] to-[color:var(--accent)] opacity-30 hidden lg:block"></div>
        
        <div class="space-y-12 lg:space-y-24">
          <!-- Step 1 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">1. Kitchen Design & Layout Planning</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">We create detailed designs optimizing your kitchen's workflow, storage, and aesthetics while considering plumbing and electrical requirements.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 2-3 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">1</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/servicesKitchen/kitchenStep1.png" alt="Kitchen design and planning" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 2 -->
          <div class="relative flex flex-col lg:flex-row-reverse items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-left lg:pl-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">2. Cabinet & Appliance Selection</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Choose from premium cabinetry, countertops, and high-end appliances in our showroom, with expert guidance on functionality and style coordination.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 1-2 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">2</div>
            <div class="lg:w-1/2 lg:pr-12">
              <img src="/pictures/servicesKitchen/kitchenStep2.png" alt="Cabinet and appliance selection" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 3 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">3. Demolition & Infrastructure</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Careful removal of existing elements and installation of new plumbing, electrical, and HVAC systems to support your new kitchen layout.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 1-2 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">3</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/servicesKitchen/kitchenStep3.png" alt="Kitchen demolition and infrastructure" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 4 -->
          <div class="relative flex flex-col lg:flex-row-reverse items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-left lg:pl-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">4. Cabinet Installation & Countertops</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Professional installation of custom cabinetry, precision-cut countertops, and backsplash to create the foundation of your dream kitchen.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 2-3 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">4</div>
            <div class="lg:w-1/2 lg:pr-12">
              <img src="/pictures/servicesKitchen/kitchenStep4.png" alt="Cabinet installation and countertops" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 5 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">5. Appliance Integration & Final Details</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Final appliance installation, hardware mounting, lighting setup, and detailed finishing touches to deliver your fully functional dream kitchen.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 1 week</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">5</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/servicesKitchen/kitchenStep5.png" alt="Appliance integration and final details" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- React modal for consultation -->
  <ContactCTA client:load />
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const estimateButtons = document.querySelectorAll('[data-estimate-button]');
    estimateButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        window.dispatchEvent(new CustomEvent('openEstimateModal'));
      });
    });
  });
</script>