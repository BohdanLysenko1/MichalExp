---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactCTA from '../../components/ContactCTA.tsx';
import SimpleFooter from '../../components/SimpleFooter.astro';
import pkg from 'lucide-react';
const { Bath, CheckCircle, LayoutGrid, Award, Droplet, PanelTop, Zap, Droplets, Hammer, Palette, ShowerHead, Package, Accessibility, Crown } = pkg;
---

<BaseLayout title="Luxury Bathroom Renovation | Chicago's Premier Remodeling Studio">
  <!-- Hero Section -->
  <section class="relative h-screen w-full overflow-hidden">
    <!-- Background image with parallax -->
    <div class="absolute inset-0 bg-cover bg-center bg-fixed" style="background-image:url('/pictures/servicesBathroom/bathroomServicesHero.png');"></div>
    <!-- Dark-to-light overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/80 to-black/30"></div>
    
    <div class="relative z-10 flex items-center justify-center h-full">
      <div class="max-w-[1100px] px-6 py-20 mx-auto text-center">
        <!-- Headline with gold glow -->
        <h1 class="opacity-0 text-4xl md:text-6xl text-white mb-4" style="font-family: 'Playfair Display', serif; text-shadow: 0 0 8px #D6B56066; animation: fadeInUp 0.6s ease-out 0.2s forwards;">
          Your Private Sanctuary Awaits
        </h1>
        <!-- Subheadline with Inter font and opacity -->
        <p class="opacity-0 mt-4 text-xl md:text-2xl text-[#F2F2F2] font-medium" style="font-family: 'Inter', sans-serif; opacity: 0.85; letter-spacing: 0.02em; animation: fadeInRight 0.6s ease-out 0.4s forwards;">
          Luxury. Comfort. Timeless Design.
        </p>
        
        <!-- CTA Buttons -->
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
          <!-- Primary Button with shimmer -->
          <button class="group rounded-full px-8 py-4 text-lg md:text-xl font-bold uppercase text-[#0B254B] opacity-0 transition-all duration-300" 
                  data-estimate-button 
                  style="background: linear-gradient(to right, #D6B560, #F6E4A4, #D6B560); background-size: 200% 100%; animation: fadeInUp 0.6s ease-out 0.6s forwards;"
                  onmouseover="this.style.backgroundPosition='100% 0'; this.style.transform='scale(1.05)'; this.style.boxShadow='0 4px 20px rgba(0,0,0,0.3)'"
                  onmouseout="this.style.backgroundPosition='0% 0'; this.style.transform='scale(1)'; this.style.boxShadow='none'">
            <span>Get Your Free Design Plan</span>
            <svg class="w-5 h-5 ml-2 inline transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </button>
          
          <!-- Secondary Ghost Button -->
          <a href="#five-step-process" class="group border-2 border-white text-white rounded-full px-8 py-4 text-lg md:text-xl flex items-center justify-center transition-all duration-500 opacity-0 hover:border-transparent hover:text-[#0B254B]" 
             style="animation: fadeInUp 0.6s ease-out 0.8s forwards; background: transparent;"
             onmouseover="this.style.background='linear-gradient(to right, #D6B560, #F6E4A4)'; this.style.borderColor='transparent'"
             onmouseout="this.style.background='transparent'; this.style.borderColor='white'">
            <span>Our Five Step Process</span>
            <svg class="w-5 h-5 ml-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="animation: bob 2s ease-in-out infinite;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </a>
        </div>
        
        <!-- Trust Row -->
        <div class="mt-12 flex flex-col sm:flex-row gap-8 justify-center items-center text-white/80 text-sm opacity-0" style="animation: fadeInUp 0.6s ease-out 1s forwards;">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#D6B560]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="10" stroke-width="1.5"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2l4-4"/>
            </svg>
            <span>25+ Years Experience</span>
          </div>
          
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#D6B560]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.783-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
            <span>100% Satisfaction Guaranteed</span>
          </div>
          
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#D6B560]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span>Locally Owned & Operated</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Overview -->
  <section class="py-20 bg-gradient-to-b from-white to-[color:var(--gray-50)]">
    <div class="container-premium">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Your Daily Retreat Deserves Excellence
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] leading-relaxed mb-12">
          Your bathroom is where you start and end each day. It should be a space that energizes you in the 
          morning and relaxes you at night. Our bathroom renovations transform ordinary spaces into 
          extraordinary sanctuaries that enhance your daily rituals and add significant value to your home.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <Hammer color="#D4AF37" class="w-8 h-8" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Premium Materials</h3>
          <p class="text-[color:var(--muted-foreground)]">Natural stone, custom tile, and luxury fixtures that stand the test of time.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <LayoutGrid color="#D4AF37" class="w-8 h-8" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Custom Design</h3>
          <p class="text-[color:var(--muted-foreground)]">Tailored layouts that maximize space and reflect your personal style perfectly.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <Award color="#D4AF37" class="w-8 h-8" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Expert Craftsmanship</h3>
          <p class="text-[color:var(--muted-foreground)]">Master craftsmen with 25+ years experience in luxury renovations.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <CheckCircle color="#D4AF37" class="w-8 h-8" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Guaranteed Results</h3>
          <p class="text-[color:var(--muted-foreground)]">100% satisfaction guarantee with comprehensive warranty coverage.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Premium Service Cards -->
  <section class="py-20 bg-white">
    <div class="container-premium">
      <div class="text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Comprehensive Bathroom Solutions
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] max-w-3xl mx-auto">
          From complete transformations to targeted upgrades, we offer the full spectrum of bathroom renovation services.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <Hammer color="#D4AF37" class="w-10 h-10" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Complete Renovations</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Full bathroom transformations with luxury fixtures, custom tilework, and premium finishes.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <ShowerHead color="#D4AF37" class="w-10 h-10" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Shower Transformations</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Walk-in showers, rainfall systems, and custom glass enclosures for the ultimate bathing experience.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <Package color="#D4AF37" class="w-10 h-10" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Vanity & Storage</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Custom vanities and intelligent storage solutions that maximize space and functionality.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <Zap color="#D4AF37" class="w-10 h-10" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Lighting & Electrical</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Ambient, task, and accent lighting with modern fixtures and smart controls.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <Accessibility color="#D4AF37" class="w-10 h-10" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Accessibility Features</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Grab bars, curbless showers, and aging-in-place modifications for safety and comfort.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <Crown color="#D4AF37" class="w-10 h-10" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Luxury Upgrades</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Heated floors, smart toilets, steam showers, and premium spa-like amenities.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Timeline -->
  <section id="five-step-process" class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container-premium">
      <div class="text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Our Proven 5-Step Process
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] max-w-3xl mx-auto">
          We've perfected our renovation process over 25+ years to minimize disruption while maximizing results.
        </p>
      </div>
      
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-[color:var(--accent)] via-[color:var(--primary)] to-[color:var(--accent)] opacity-30 hidden lg:block"></div>
        
        <div class="space-y-12 lg:space-y-24">
          <!-- Step 1 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">1. Bathroom Design & Space Planning</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">We create detailed layouts maximizing your bathroom's functionality while ensuring proper ventilation, waterproofing, and accessibility considerations.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 1-2 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">1</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/servicesBathroom/bathroomServices1.png" alt="Bathroom design and planning" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 2 -->
          <div class="relative flex flex-col lg:flex-row-reverse items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-left lg:pl-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">2. Fixture & Tile Selection</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Choose from luxury fixtures, premium tiles, and high-quality finishes in our showroom, with expert guidance on water efficiency and style coordination.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 1-2 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">2</div>
            <div class="lg:w-1/2 lg:pr-12">
              <img src="/pictures/servicesBathroom/bathroomServices2.png" alt="Fixture and tile selection" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 3 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">3. Plumbing & Waterproofing</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Complete plumbing installation and professional waterproofing systems to ensure your bathroom remains leak-free and structurally sound for decades.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 1-2 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">3</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/servicesBathroom/bathroomServices3.png" alt="Plumbing and waterproofing" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 4 -->
          <div class="relative flex flex-col lg:flex-row-reverse items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-left lg:pl-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">4. Tile Installation & Vanity Setup</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Precision tile installation, custom vanity mounting, and mirror placement to create a beautifully coordinated and functional bathroom space.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 2-3 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">4</div>
            <div class="lg:w-1/2 lg:pr-12">
              <img src="/pictures/servicesBathroom/bathroomServices4.png" alt="Tile installation and vanity setup" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 5 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">5. Fixture Installation & Final Details</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Final fixture installation, lighting setup, hardware mounting, and detailed finishing touches to deliver your spa-like bathroom retreat.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 3-5 days</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">5</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/servicesBathroom/bathroomServices5.png" alt="Fixture installation and final details" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>



  <!-- React modal for consultation -->
  <ContactCTA client:load />

  <!-- Footer -->
  <SimpleFooter />

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const estimateButtons = document.querySelectorAll('[data-estimate-button]');
      estimateButtons.forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          window.dispatchEvent(new CustomEvent('openEstimateModal'));
        });
      });
    });
  </script>
</BaseLayout>