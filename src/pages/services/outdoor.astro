---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactCTA from '../../components/ContactCTA.tsx';
import { Trees } from 'lucide-react';
---

<BaseLayout title="Premium Outdoor Living Spaces | Chicago's Premier Remodeling Studio">
  <!-- Hero Section -->
  <section class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden bg-gradient-to-br from-[color:var(--primary)] via-[color:var(--primary)]/90 to-[color:var(--accent)]/80">
    <div class="relative z-10 container-premium text-center">
      <div class="hero-content max-w-4xl mx-auto">
        <div class="inline-block text-[color:var(--accent)] mb-6">
          <Trees size={80} strokeWidth={1.5} />
        </div>
        <h1 class="text-display-xl font-display font-bold mb-6 text-[color:var(--primary)] leading-tight">
          Extend Your Living with 
          <span class="text-[color:var(--accent)]">Premium Outdoor Spaces</span>
        </h1>
        <p class="text-xl text-[color:var(--muted-foreground)] mb-8 max-w-2xl mx-auto leading-relaxed">
          Create stunning outdoor living areas that seamlessly blend with nature while providing comfort, functionality, and year-round enjoyment for your family.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <button class="btn-primary group" data-estimate-button>
            <span>Get Free Outdoor Design</span>
            <svg class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </button>
          <a href="#portfolio" class="btn-secondary group">
            <span>View Outdoor Gallery</span>
            <svg class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-y-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Overview -->
  <section class="py-20 bg-gradient-to-b from-white to-[color:var(--gray-50)]">
    <div class="container-premium">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Transform Your Outdoor Experience
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] leading-relaxed mb-12">
          Your outdoor space is an extension of your home and lifestyle. We design and build premium outdoor 
          living areas that provide the perfect setting for relaxation, entertainment, and connection with nature, 
          all while adding significant value to your property.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Custom Design</h3>
          <p class="text-[color:var(--muted-foreground)]">Tailored outdoor spaces that complement your home's architecture.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Weather Resistant</h3>
          <p class="text-[color:var(--muted-foreground)]">Premium materials designed to withstand Chicago's climate.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Smart Features</h3>
          <p class="text-[color:var(--muted-foreground)]">Integrated lighting, sound, and climate control systems.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Value Addition</h3>
          <p class="text-[color:var(--muted-foreground)]">Outdoor improvements that significantly increase property value.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Premium Service Cards -->
  <section class="py-20 bg-white">
    <div class="container-premium">
      <div class="text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Premium Outdoor Living Solutions
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] max-w-3xl mx-auto">
          From intimate patios to expansive outdoor kitchens, we create outdoor spaces that extend your living area and enhance your lifestyle.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Custom Decks</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Multi-level composite and hardwood decks with integrated lighting and built-in seating.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10v11M20 10v11"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Luxury Patios</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Stone, brick, and paver patios with fire features and water elements.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Outdoor Kitchens</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Complete cooking stations with grills, refrigeration, and weather-resistant cabinetry.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Pergolas & Gazebos</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Architectural shade structures with retractable canopies and integrated lighting.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Fire Features</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Custom fire pits, fireplaces, and water features for year-round outdoor enjoyment.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Landscape Integration</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Professional landscaping and hardscaping to complete your outdoor vision.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Timeline -->
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container-premium">
      <div class="text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Our Proven 5-Step Process
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] max-w-3xl mx-auto">
          We've perfected our renovation process over 15+ years to minimize disruption while maximizing results.
        </p>
      </div>
      
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-[color:var(--accent)] via-[color:var(--primary)] to-[color:var(--accent)] opacity-30 hidden lg:block"></div>
        
        <div class="space-y-12 lg:space-y-24">
          <!-- Step 1 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">1. Site Analysis & Landscape Design</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">We evaluate your property's drainage, sun exposure, and soil conditions to create outdoor spaces that work harmoniously with your environment.</p>
                <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 2-3 weeks</div>
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">1</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/outdoor/site-analysis.jpg" alt="Site analysis and landscape design" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 2 -->
          <div class="relative flex flex-col lg:flex-row-reverse items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-left lg:pl-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">2. Material & Plant Selection</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Choose weather-resistant materials, outdoor furniture, and native plants that thrive in Chicago's climate while complementing your home's architecture.</p>
                <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 1-2 weeks</div>
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">2</div>
            <div class="lg:w-1/2 lg:pr-12">
              <img src="/pictures/outdoor/material-selection.jpg" alt="Material and plant selection" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 3 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">3. Hardscape Construction</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Installation of patios, walkways, retaining walls, and outdoor structures using premium materials designed to withstand Chicago winters.</p>
                <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 2-4 weeks</div>
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">3</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/outdoor/hardscape-construction.jpg" alt="Hardscape construction" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 4 -->
          <div class="relative flex flex-col lg:flex-row-reverse items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-left lg:pl-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">4. Landscaping & Utilities</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Professional planting, irrigation system installation, and outdoor lighting setup to create a lush, functional outdoor environment.</p>
                <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 1-2 weeks</div>
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">4</div>
            <div class="lg:w-1/2 lg:pr-12">
              <img src="/pictures/outdoor/landscaping-utilities.jpg" alt="Landscaping and utilities" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 5 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">5. Finishing Touches & Maintenance Plan</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Final details, outdoor furniture placement, and comprehensive seasonal maintenance guidance to ensure your outdoor space thrives year-round.</p>
                <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 3-5 days</div>
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">5</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/outdoor/finishing-touches.jpg" alt="Finishing touches and maintenance plan" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- React modal for consultation -->
  <ContactCTA client:load />
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const estimateButtons = document.querySelectorAll('[data-estimate-button]');
    estimateButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        window.dispatchEvent(new CustomEvent('openEstimateModal'));
      });
    });
  });
</script>