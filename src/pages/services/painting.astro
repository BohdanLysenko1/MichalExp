---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactCTA from '../../components/ContactCTA.tsx';
import { Paintbrush } from 'lucide-react';
---

<BaseLayout title="Premium Painting & Finishes | Chicago's Premier Remodeling Studio">
  <!-- Hero Section -->
  <section class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden bg-gradient-to-br from-[color:var(--primary)] via-[color:var(--primary)]/90 to-[color:var(--accent)]/80">
    <div class="relative z-10 container-premium text-center">
      <div class="hero-content max-w-4xl mx-auto">
        <div class="inline-block text-[color:var(--accent)] mb-6">
          <Paintbrush size={80} strokeWidth={1.5} />
        </div>
        <h1 class="text-display-xl font-display font-bold mb-6 text-[color:var(--primary)] leading-tight">
          Elevate Every Surface with 
          <span class="text-[color:var(--accent)]">Premium Painting & Finishes</span>
        </h1>
        <p class="text-xl text-[color:var(--muted-foreground)] mb-8 max-w-2xl mx-auto leading-relaxed">
          Transform your space with expert color consultation, premium finishes, and meticulous craftsmanship that protects and beautifies every surface in your home.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <button class="btn-primary group" data-estimate-button>
            <span>Get Free Color Consultation</span>
            <svg class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </button>
          <a href="#portfolio" class="btn-secondary group">
            <span>View Paint Gallery</span>
            <svg class="w-5 h-5 ml-2 transition-transform duration-300 group-hover:translate-y-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Overview -->
  <section class="py-20 bg-gradient-to-b from-white to-[color:var(--gray-50)]">
    <div class="container-premium">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          The Art of Perfect Finishes
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] leading-relaxed mb-12">
          Nothing transforms a space quite like expertly applied paint and finishes. Our master painters bring decades 
          of experience to every project, combining traditional techniques with modern premium materials to create 
          surfaces that are both beautiful and long-lasting.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3H5a2 2 0 00-2 2v12a4 4 0 004 4h2a2 2 0 002-2V5a2 2 0 00-2-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Color Expertise</h3>
          <p class="text-[color:var(--muted-foreground)]">Professional color consultation to create perfect palettes.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Premium Materials</h3>
          <p class="text-[color:var(--muted-foreground)]">Only the finest paints and finishes for lasting beauty.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Master Craftsmanship</h3>
          <p class="text-[color:var(--muted-foreground)]">Precise preparation and application for flawless results.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <svg class="w-8 h-8 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Lasting Value</h3>
          <p class="text-[color:var(--muted-foreground)]">Protective finishes that maintain beauty for years to come.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Premium Service Cards -->
  <section class="py-20 bg-white">
    <div class="container-premium">
      <div class="text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Complete Painting & Finishing Services
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] max-w-3xl mx-auto">
          From subtle color refreshes to dramatic transformations, we offer comprehensive painting and finishing solutions for every surface in your home.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Interior Painting</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Professional interior painting with premium paints and meticulous preparation for lasting results.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Exterior Painting</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Weather-resistant exterior finishes that protect and beautify your home's exterior surfaces.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3H5a2 2 0 00-2 2v12a4 4 0 004 4h2a2 2 0 002-2V5a2 2 0 00-2-2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Cabinet Refinishing</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Transform kitchen and bathroom cabinets with professional refinishing and modern colors.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Specialty Finishes</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Decorative techniques including faux finishes, texture work, and artistic wall treatments.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Wallpaper & Coverings</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Expert installation of wallpaper, fabric coverings, and decorative wall treatments.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-10 h-10 text-[color:var(--accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Surface Restoration</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Repair and restoration of damaged surfaces before applying premium finishes.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Timeline -->
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container-premium">
      <div class="text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Our Proven 5-Step Process
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] max-w-3xl mx-auto">
          We've perfected our renovation process over 15+ years to minimize disruption while maximizing results.
        </p>
      </div>
      
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-[color:var(--accent)] via-[color:var(--primary)] to-[color:var(--accent)] opacity-30 hidden lg:block"></div>
        
        <div class="space-y-12 lg:space-y-24">
          <!-- Step 1 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">1. Color Consultation & Surface Analysis</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Professional color selection consultation and thorough inspection of all surfaces to be painted, identifying preparation needs and material requirements.</p>
                <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 1-2 weeks</div>
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">1</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/painting/color-consultation.jpg" alt="Color consultation and surface analysis" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 2 -->
          <div class="relative flex flex-col lg:flex-row-reverse items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-left lg:pl-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">2. Surface Preparation & Priming</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Meticulous cleaning, sanding, filling, and priming of all surfaces to ensure optimal paint adhesion and a smooth, professional finish.</p>
                <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 2-3 days</div>
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">2</div>
            <div class="lg:w-1/2 lg:pr-12">
              <img src="/pictures/painting/surface-prep.jpg" alt="Surface preparation and priming" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 3 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">3. Premium Paint Application</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Expert application of premium paints using professional techniques to achieve uniform coverage, clean lines, and a flawless finish.</p>
                <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 3-5 days</div>
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">3</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/painting/paint-application.jpg" alt="Premium paint application" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 4 -->
          <div class="relative flex flex-col lg:flex-row-reverse items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-left lg:pl-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">4. Detail Work & Accent Features</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Precise trim work, accent walls, decorative finishes, and specialty techniques to add character and sophistication to your spaces.</p>
                <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 1-2 days</div>
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">4</div>
            <div class="lg:w-1/2 lg:pr-12">
              <img src="/pictures/painting/detail-work.jpg" alt="Detail work and accent features" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 5 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">5. Final Inspection & Touch-Ups</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Comprehensive quality review, addressing any imperfections, and providing care instructions to maintain your beautiful new paint finish.</p>
                <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 1 day</div>
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">5</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/painting/final-inspection.jpg" alt="Final inspection and touch-ups" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- React modal for consultation -->
  <ContactCTA client:load />
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const estimateButtons = document.querySelectorAll('[data-estimate-button]');
    estimateButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        window.dispatchEvent(new CustomEvent('openEstimateModal'));
      });
    });
  });
</script>