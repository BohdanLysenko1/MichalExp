---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactCTA from '../../components/ContactCTA.tsx';
import SimpleFooter from '../../components/SimpleFooter.astro';
import { Home, Building, MapPin, CheckCircle, DollarSign, Hammer, Ruler, Cpu, Building2, Footprints, Brush } from 'lucide-react';
---

<BaseLayout title="General Contracting & Home Remodeling | Chicago's Premier Renovation Studio">
  <!-- Hero Section -->
  <section class="relative h-screen w-full overflow-hidden">
    <!-- Background image with parallax -->
    <div class="absolute inset-0 bg-cover bg-center bg-fixed" style="background-image:url('/pictures/servicesGeneral/servicesGeneralHero.png');"></div>
    <!-- Dark-to-light overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/80 to-black/30"></div>
    
    <div class="relative z-10 flex items-center justify-center h-full">
      <div class="max-w-[1100px] px-6 py-20 mx-auto text-center">
        <!-- Headline with gold glow -->
        <h1 class="opacity-0 text-4xl md:text-6xl text-white mb-4" style="font-family: 'Playfair Display', serif; text-shadow: 0 0 8px #D6B56066; animation: fadeInUp 0.6s ease-out 0.2s forwards;">
          Transform Your Entire Home
        </h1>
        <!-- Subheadline with Inter font and opacity -->
        <p class="opacity-0 mt-4 text-xl md:text-2xl text-[#F2F2F2] font-medium" style="font-family: 'Inter', sans-serif; opacity: 0.85; letter-spacing: 0.02em; animation: fadeInRight 0.6s ease-out 0.4s forwards;">
          Where Vision Meets Excellence.
        </p>
        
        <!-- CTA Buttons -->
        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
          <!-- Primary Button with shimmer -->
          <button class="group rounded-full px-8 py-4 text-lg md:text-xl font-bold uppercase text-[#0B254B] opacity-0 transition-all duration-300" 
                  data-estimate-button 
                  style="background: linear-gradient(to right, #D6B560, #F6E4A4, #D6B560); background-size: 200% 100%; animation: fadeInUp 0.6s ease-out 0.6s forwards;"
                  onmouseover="this.style.backgroundPosition='100% 0'; this.style.transform='scale(1.05)'; this.style.boxShadow='0 4px 20px rgba(0,0,0,0.3)'"
                  onmouseout="this.style.backgroundPosition='0% 0'; this.style.transform='scale(1)'; this.style.boxShadow='none'">
            <span>Get Your Free Design Plan</span>
            <svg class="w-5 h-5 ml-2 inline transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </button>
          
          <!-- Secondary Ghost Button -->
          <a href="#five-step-process" class="group border-2 border-white text-white rounded-full px-8 py-4 text-lg md:text-xl flex items-center justify-center transition-all duration-500 opacity-0 hover:border-transparent hover:text-[#0B254B]" 
             style="animation: fadeInUp 0.6s ease-out 0.8s forwards; background: transparent;"
             onmouseover="this.style.background='linear-gradient(to right, #D6B560, #F6E4A4)'; this.style.borderColor='transparent'"
             onmouseout="this.style.background='transparent'; this.style.borderColor='white'">
            <span>Our Five Step Process</span>
            <svg class="w-5 h-5 ml-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="animation: bob 2s ease-in-out infinite;">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </a>
        </div>
        
        <!-- Trust Row -->
        <div class="mt-12 flex flex-col sm:flex-row gap-8 justify-center items-center text-white/80 text-sm opacity-0" style="animation: fadeInUp 0.6s ease-out 1s forwards;">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#D6B560]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="10" stroke-width="1.5"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2l4-4"/>
            </svg>
            <span>25+ Years Experience</span>
          </div>
          
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#D6B560]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.783-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
            <span>100% Satisfaction Guaranteed</span>
          </div>
          
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-[#D6B560]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <span>Locally Owned & Operated</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }
    @keyframes fadeInRight {
      from { opacity: 0; transform: translateX(-30px); }
      to { opacity: 1; transform: translateX(0); }
    }
    @keyframes bob {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(4px); }
    }
  </style>

  <!-- Service Overview -->
  <section class="py-20 bg-gradient-to-b from-white to-[color:var(--gray-50)]">
    <div class="container-premium">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Your Vision, Our Comprehensive Expertise
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] leading-relaxed mb-12">
          Whether you're planning a single room refresh or a complete home transformation, our general 
          remodeling services bring together all the trades and expertise needed to execute your vision 
          flawlessly. We handle every detail from design to final walkthrough.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <Building color="#D4AF37" class="w-8 h-8" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Complete Design</h3>
          <p class="text-[color:var(--muted-foreground)]">Full-service design from concept through construction documentation.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <MapPin color="#D4AF37" class="w-8 h-8" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Project Management</h3>
          <p class="text-[color:var(--muted-foreground)]">Coordinated scheduling and oversight of all trades and timelines.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <CheckCircle color="#D4AF37" class="w-8 h-8" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Quality Assurance</h3>
          <p class="text-[color:var(--muted-foreground)]">Rigorous quality control at every phase of construction.</p>
        </div>
        
        <div class="text-center glass-effect p-8 rounded-3xl hover-lift">
          <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center">
            <DollarSign color="#D4AF37" class="w-8 h-8" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-3">Value Engineering</h3>
          <p class="text-[color:var(--muted-foreground)]">Smart solutions that maximize impact within your budget.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Premium Service Cards -->
  <section class="py-20 bg-white">
    <div class="container-premium">
      <div class="text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Comprehensive Remodeling Services
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] max-w-3xl mx-auto">
          From minor updates to major renovations, we have the expertise and resources to handle any project size or complexity.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <Home color="#D4AF37" class="w-10 h-10" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Whole-Home Renovations</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Complete home transformations with coordinated design and construction across multiple rooms.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <Hammer color="#D4AF37" class="w-10 h-10" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Room Additions</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Expand your living space with seamlessly integrated new construction and design.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <Ruler color="#D4AF37" class="w-10 h-10" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Open Floor Plans</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Remove walls and reconfigure spaces to create modern, flowing layouts.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <Building2 color="#D4AF37" class="w-10 h-10" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Structural Repairs</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Foundation work, beam reinforcement, and structural improvements for safety and stability.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <Cpu color="#D4AF37" class="w-10 h-10" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Smart Home Integration</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Modern electrical systems, automation, and technology infrastructure installation.</p>
        </div>
        
        <div class="glass-effect p-8 rounded-3xl hover-lift group">
          <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[color:var(--accent)]/20 to-[color:var(--primary)]/20 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <Brush color="#D4AF37" class="w-10 h-10" strokeWidth={1.5} />
          </div>
          <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4 text-center">Custom Millwork</h3>
          <p class="text-[color:var(--muted-foreground)] mb-6 text-center">Built-in cabinetry, trim work, and architectural details throughout your home.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Timeline -->
  <section id="five-step-process" class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="container-premium">
      <div class="text-center mb-16">
        <h2 class="text-heading-lg font-display font-bold mb-6 text-[color:var(--primary)]">
          Our Proven 5-Step Process
        </h2>
        <p class="text-body-lg text-[color:var(--muted-foreground)] max-w-3xl mx-auto">
          We've perfected our renovation process over 25+ years to minimize disruption while maximizing results.
        </p>
      </div>
      
      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gradient-to-b from-[color:var(--accent)] via-[color:var(--primary)] to-[color:var(--accent)] opacity-30 hidden lg:block"></div>
        
        <div class="space-y-12 lg:space-y-24">
          <!-- Step 1 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">1. Comprehensive Project Assessment</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">We conduct thorough structural, electrical, and plumbing evaluations to understand your home's potential and create a master renovation plan.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 2-4 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">1</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/servicesGeneral/servicesGeneralStep1.png" alt="Comprehensive project assessment" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 2 -->
          <div class="relative flex flex-col lg:flex-row-reverse items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-left lg:pl-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">2. Design Development & Permits</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Creation of detailed architectural plans and handling all necessary permits and approvals to ensure your project meets all building codes and regulations.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 3-6 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">2</div>
            <div class="lg:w-1/2 lg:pr-12">
              <img src="/pictures/servicesGeneral/servicesGeneralStep2.png" alt="Design development and permits" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 3 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">3. Structural & Systems Work</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Major structural modifications, electrical upgrades, plumbing installation, and HVAC improvements to support your home's transformation.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 4-8 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">3</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/servicesGeneral/servicesGeneralStep3.png" alt="Structural and systems work" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 4 -->
          <div class="relative flex flex-col lg:flex-row-reverse items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-left lg:pl-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">4. Interior Build-Out & Finishes</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Installation of flooring, cabinetry, fixtures, and custom millwork, followed by painting and trim work to bring your vision to life.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 3-6 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">4</div>
            <div class="lg:w-1/2 lg:pr-12">
              <img src="/pictures/servicesGeneral/servicesGeneralStep4.png" alt="Interior build-out & finishes" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
          
          <!-- Step 5 -->
          <div class="relative flex flex-col lg:flex-row items-center gap-8">
            <div class="lg:w-1/2 text-center lg:text-right lg:pr-12">
              <div class="glass-effect p-8 rounded-3xl">
                <h3 class="text-xl font-bold text-[color:var(--primary)] mb-4">5. Final Inspections & Project Completion</h3>
                <p class="text-[color:var(--muted-foreground)] mb-4">Comprehensive quality inspections, final touch-ups, and detailed walkthrough to ensure every aspect of your remodel exceeds expectations.</p>
                <!-- <div class="text-sm text-[color:var(--accent)] font-semibold">Timeline: 1-2 weeks</div> -->
              </div>
            </div>
            <div class="absolute left-1/2 transform -translate-x-1/2 w-16 h-16 bg-[color:var(--accent)] rounded-full flex items-center justify-center text-white font-bold text-xl z-10 hidden lg:flex">5</div>
            <div class="lg:w-1/2 lg:pl-12">
              <img src="/pictures/servicesGeneral/servicesGeneralStep5.png" alt="Final inspections & project completion" class="w-full h-64 object-cover rounded-2xl shadow-lg" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- React modal for consultation -->
  <ContactCTA client:load />

  <!-- Footer -->
  <SimpleFooter />

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const estimateButtons = document.querySelectorAll('[data-estimate-button]');
      estimateButtons.forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          window.dispatchEvent(new CustomEvent('openEstimateModal'));
        });
      });
    });
  </script>
</BaseLayout>