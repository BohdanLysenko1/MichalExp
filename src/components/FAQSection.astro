// Convert to simplified format expected by the React component
const simplifiedFaqs = [{
  title: "Frequently Asked Questions",
  items: faqs
}];
---
<section class="w-full py-16 bg-white">
  <div class="container mx-auto px-4 max-w-2xl">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-10 text-black">Frequently Asked Questions</h2>
    <FAQSection faqData={simplifiedFaqs} client:load />
  </div>
</section>
